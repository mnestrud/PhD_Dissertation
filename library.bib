@article{Heymann1994,
abstract = {In Free Choice Profiling (FCP) each individual panelist creates his own series of descriptors to describe the differences among a set of samples. This is in contrast to multidimensional scaling (MDS) where the panelists assess the similarities among the samples. The objective of this study was to compare the results obtained from two FCP panels (one composed of "sensory-savvy" persons and the other of "sensory-naive" individuals) with MDS results. Vanillin and four vanilla samples each originally at 3-fold, 10-fold and 20-fold concentration were evaluated. On average the sensory-savvy (SS) panelists did not use significantly more descriptors than the sensory-naive (SN) group. However, the terms used by the SS group were more likely to discriminate among the samples than the SN terms. Procrustes analysis indicated that the SN data did not have a true consensus space while the SS data did. The MDS data space was visually similar to the FCP space.},
annote = {10.1111/j.1745-459X.1994.tb00258.x},

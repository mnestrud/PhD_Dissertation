journal = {Cancer Res},
keywords = {angiogenesis,cancer,capsaicin},
number = {2},
pages = {644--651},
title = {{Capsaicin Inhibits in Vitro and in Vivo Angiogenesis}},
url = {http://cancerres.aacrjournals.org/cgi/content/abstract/64/2/644},
volume = {64},
year = {2004}
}
@article{Josse2008,

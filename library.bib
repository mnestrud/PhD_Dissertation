keywords = {Complex,Descriptive analysis,Models,Odors},
number = {4-5},
pages = {325--332},
title = {{Descriptive analysis of complex odors: reality, model or illusion?}},
url = {http://www.sciencedirect.com/science/article/B6T6T-3WM586T-D/2/c0061c3afc7f1ca9338051133919d75d},

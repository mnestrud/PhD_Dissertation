author = {Achir, Nawel and Vitrac, Olivier and Trystram, Gilles},
file = {:C$\backslash$:/Users/Michael/Documents/Grad School/research/references/Achir-Direct observation of the surface structure of French fries.pdf:pdf},
isbn = {0963-9969},
journal = {Food Research International},
keywords = {air-drying,cell,confocal laser microscopy,french fries,frying,oil uptake,potato},
title = {{Direct observation of the surface structure of French fries by UV-VIS confocal laser scanning microscopy}},
